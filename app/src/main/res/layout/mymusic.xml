<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2196F3"
        android:orientation="horizontal"
        android:id="@+id/playing">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="27dp"
            android:text="Now Playing"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColor="#FFFEFE"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/yu"
            android:layout_marginLeft="60dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/heart"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:paddingTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/tedot2"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:paddingTop="5dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:id="@+id/playpic"
        android:layout_below="@+id/playing">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:id="@+id/picture">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/eminem"
                android:scaleX="1"
                android:scaleY="1.5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#5C000000"
                ></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#5C000000"
                android:layout_marginTop="280dp"></LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@+id/picture"
            android:background="#2196F3"
            ></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="250dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/playe"
                android:layout_marginLeft="300dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/playpic">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#2196F3"
            android:orientation="vertical"
            android:id="@+id/lyric">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Rivival"
                android:textColor="#FFFCFC"
                android:paddingLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="River - Eminem"
                android:textColor="#FDF9F9"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10                                                                           1:46/3:04"
                android:textSize="15dp"
                android:textColor="#FFF3F3"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/lyric"
            android:background="#00BCD4">
            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:drawableLeft="@android:drawable/ic_media_previous"
                android:drawableRight="@android:drawable/ic_media_rew"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:drawableLeft="@android:drawable/ic_media_pause"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:drawableLeft="@android:drawable/ic_media_ff"
                android:drawableRight="@android:drawable/ic_media_next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="5dp"
            android:background="#FFEB3B"
            android:layout_marginTop="115dp"
            >
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>